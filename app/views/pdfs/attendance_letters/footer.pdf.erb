<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <style>
          body {
            font-size: 12px;
            text-align: right;
          }
        </style>

        <script>
            var studentNames = [<%= attendances.map { |a| "'#{j a.full_name}'" }.join(', ').html_safe %>];

            function label_pages() {
                var vars = {};
                var x = document.location.search.substring(1).split('&');

                for (var i in x) {
                    var z = x[i].split('=', 2);
                    vars[z[0]] = decodeURIComponent(z[1]);
                }

                var x = ['page'];

                for (var i in x) {
                    var y = document.getElementsByClassName(x[i]);
                    for (var j = 0; j < y.length; ++j)
                        y[j].textContent = studentNames[vars[x[i]] - 1];
                }
            }
        </script>
    </head>

    <body onload="label_pages()">
        <div class="page"></div>
    </body>
</html>
